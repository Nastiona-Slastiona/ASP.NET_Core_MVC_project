<h2>@ViewData["Text"]</h2>

<form method="POST">
    <div>
        <h2> Список</h2>
        <ol type="A">
            @for (int i = 1; i < 5; i++)
            {
                <li>Элемент @i списка</li>
            }
        </ol>
    </div>
    <hr />
    <h2>Форма</h2>
    <fieldset class="form-group">
        <select asp-items="@ViewData["Lst"] as SelectList"></select>
    </fieldset>
    <div class="mx-auto" style="width: 400px;">
        <div class="container">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="chb1" id="defaultCheck1" name="checbox1">
                <label class="form-check-label" for="defaultCheck1">
                    Чек-бокс 1
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="chb2" id="defaultCheck2" name="checkbox2">
                <label class="form-check-label" for="defaultCheck2">
                    Чек-бокс 2
                </label>
            </div>
        </div>
        <p></p>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                <label class="form-check-label" for="inlineRadio1">
                    Радио 1
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                <label class="form-check-label" for="inlineRadio2">
                    Радио 2
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                <label class="form-check-label" for="inlineRadio3">
                    Радио 3
                </label>
            </div>
        </div>
        <p></p>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">
            Логин:
        </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputEmail" name="login" placeholder="Введите логин">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">
            Пароль:
        </label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Введите пароль">
        </div>
    </div>
    <button type="submit" class="btn btn-info">Отправить</button>
</form>

